<%= form_for(@employee) do |f| %>
<%= f.label :first_name, "First Name" %>
<%= f.text_field :first_name %>
<%= f.label :last_name, "Last Name" %>
<%= f.text_field :last_name %>
<%= f.label :alias, "Alias" %>
<%= f.text_field :alias %>
<%= f.label :title, "Title" %>
<%= f.text_field :title %>
<%= f.label :office, "Office" %>
<%= f.text_field :office %>
<%= f.label :img_url, "Image URL" %>
<%= f.text_field :img_url %>

<%= f.label :dog_id, "Dog" %>
<%= f.collection_select :dog_id, Dog.all, :id, :name %>
<%= f.submit %>

<p>Please see your current image below</p>
<p><%= image_tag(@employee.img_url) %></p>

<% end %>